<h1> Available offers </h1>

<div class= 'col-sm-6'>
  <% @offer_filt_order.each do |offer| %>
    <div class = 'card img-on-top'>
      <h2> <%= offer.court.name %> </h2>

      <h2><%= offer.distance%> minutes drive </h2>

      <h2> <%=offer.match_at%> </h2>

      <%= link_to 'book', new_offer_booking_path(offer)  %>
      <button type="button" class="btn btn-success">Book this offer</button>
    </div>
  <% end %>
</div>

<h1><%= link_to "No suitable match? Click here to create an Offer!", new_offer_path %></h1>



