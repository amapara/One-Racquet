<h1 class="ready">Ready to play?</h1>

<div class="main">
  <div class="card">
  <h4>Please select your details:</h4>
  <p class="location_text">Enter a court address:</p>
  <div class="form-items">
    <p id="fm-control">
  <%= form_tag offers_path, method: :get do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find an offer"
    %>
  </p>
  <p class="start_text">Select start date & time:</p>
    <p class="start_date">
    <%= datetime_field_tag :start_date,
      class: "form-control",
      placeholder: "Select start date"
     %>
    </p>

    <p>Select end date & time:</p>
    <p class="end_date">
    <%= datetime_field_tag :end_date,
      class: "form-control",
      placeholder: "Select end date"
     %>
     </p>
     <input type="text" class="js-range-slider" name="my_range" value="" />
      <p class="submit-button">
      <%= submit_tag "submit", class: "btn btn-primary" %>
      </p>

  <% end %>
  </div>
  </div>
</div>
