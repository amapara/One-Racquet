<h1 id='header' class = 'text-center'>Welcome to your dashboard, <%= @user.name %></h1>

<div class="parallax">

<div class='card' id ='dashboard_card'>

  <h2 class= "card-header light-blue lighten-1 white-text text-uppercase font-weight-bold text-center"> Your Offers </h2>

  <ul class="list-group list-group-flush">
    <% @user.offers.each do |offer| %>
    <% if offer.booked? == false %>
    <li class="list-group-item">
      <strong> <%= offer.court.name %> </strong>
      <p><%= offer.match_at %></p>
      <%= offer.court.address %>
    </li>
    <% end %>
    <% end %>
  </ul>
</div>

