<div class='card' id ='dashboard_card'>
  <h2 class= "card-header border-bottom"> Your Bookings: </h2>

  <% if current_user.bookings.empty? %>
  <p> No bookings in list <p>
    <% else %>

    <% current_user.bookings.each do |booking| %>
    <div class="card-horizontal">

      <div class="img-square-wrapper">
        <img id="img_card" src="http://via.placeholder.com/90x90" alt="Card image cap">
      </div>

      <ul class="list-group list-group-flush">
       <li class="list-group-item">
        <br><strong><%= booking.offer.court.name %></strong></br>
        <br><%= booking.offer.match_at %></br>
        <br><%= booking.offer.court.address %></br>
      </li>
    </ul>

  </div>
  <% end %>
  <% end %>
</div>
</div>

